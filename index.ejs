<%- include('./partials/header') %>
<div class="main">
    <div class="wrapper">
        <div class="middle-col">
            <div class="main-content box">
                <div class="main-tabs">
                    <a href="" class="tab focus">技术</a>
                    <a href="" class="tab">创意</a>
                    <a href="" class="tab">好玩</a>
                    <a href="" class="tab">交易</a>
                    <a href="" class="tab">问与答</a>
                    <a href="" class="tab">最热</a>
                    <a href="" class="tab">全部</a>
                    <a href="" class="tab">关注</a>
                </div>
                <div class="secondary-tabs">
                    <a href="">C++</a>
                    <a href="">Java</a>
                    <a href="">Python</a>
                    <a href="">JavaScript</a>
                    <a href="">Go</a>
                </div>
                <% if (pages.length){ %>
                    <% pages.forEach((page)=>{ %>
                        <div class="item">
                            <img src="<%- page.avatar ? page.avatar : '/static/default_avatar.png' %>" class="avatar" alt="">
                            <div class="item-content">
                                <a href="/page/<%= page.link %>" class="title"><%= page.title ? page.title : 'No title' %></a>
                                <div class="info">
                                    <% page.tag.trim().split(" ").forEach(function (tag) { if(tag !== ""){ %>
                                        <a class="node" href="/tag/<%= tag %>"><%= tag %></a>
                                    <% }}); %>
                                    &nbsp;•&nbsp;
                                    <strong><a href="" class="username"><%= page.username %></a></strong>
                                    &nbsp;•&nbsp;
                                    <a href="/archive/<%= page.post_time.split('-')[0] + '/' + page.post_time.split('-')[1] %>"><%= page.post_time.substring(0, 10) %></a>
                                </div>
                            </div>
                            <div class="counter">
                                <a href="#"><%= page.view %></a>
                            </div>
                        </div>
                <% })} %>
                <%- include('./partials/paginator') %>
            </div>
        </div>
        <div class="right-bar">
            <%- include('./partials/panel') %>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
