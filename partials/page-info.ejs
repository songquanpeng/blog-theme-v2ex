<div class="header">
<a href="/">Home</a>
    <% page.tag.trim().split(" ").forEach(function (tag) { if(tag !== ""){ %>
        &nbsp;›&nbsp; <a class="chevron" href="/tag/<%= tag %>"><%= tag %></a>
    <% }}); %>
</div>
<div class="header">
    <div class="title">
        <%= page.title %>
    </div>
    <div class="info">
        <a href=""><%= page.username %></a>
        &nbsp;•&nbsp;
        <%= page.post_time %>
        &nbsp;•&nbsp;
        <%= page.view %> views
    </div>
</div>
